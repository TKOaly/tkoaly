datasource postgresql {
  url      = env("DATABASE_URL")
  provider = "postgresql"
}

generator client {
  provider = "prisma-client-js"
  output   = "node_modules/.prisma/client"
}

model User {
  id       String @id @default(uuid()) @postgresql.Uuid
  name     String @default("")
  email    String @unique @default("")
  password String
  jobs     Job[]  @relation("Job_author")
}

model Job {
  id        String    @id @default(uuid()) @postgresql.Uuid
  title     String    @default("")
  status    String?   @default("draft")
  content   Json      @default("[{\"type\":\"paragraph\",\"children\":[{\"text\":\"\"}]}]")
  startDate DateTime
  endDate   DateTime?
  author    User?     @relation("Job_author", fields: [authorId], references: [id])
  authorId  String?   @map("author") @postgresql.Uuid
  url       String    @default("")
  tags      Tag[]     @relation("Job_tags")
  company   Company?  @relation("Company_jobs")

  @@index([authorId])
}

model Company {
  id             String  @id @default(uuid()) @postgresql.Uuid
  name           String  @unique @default("")
  logo_filesize  Int?
  logo_extension String?
  logo_width     Int?
  logo_height    Int?
  logo_mode      String?
  logo_id        String?
  sponsored      Boolean @default(false)
  website        String  @default("")
  jobs           Job?    @relation("Company_jobs", fields: [jobsId], references: [id])
  jobsId         String? @unique @map("jobs") @postgresql.Uuid
}

model Tag {
  id   String @id @default(uuid()) @postgresql.Uuid
  name String @unique @default("")
  jobs Job[]  @relation("Job_tags")
}